{
    "rewrites": [
      { "source": "/api/(.*)", "destination": "https://blogaura.onrender.com/api/$1" },
      { "source": "/uploads/(.*)", "destination": "https://blogaura.onrender.com/images/$1" },
      { "source": "/(.*)", "destination": "/index.html" }
    ],
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "framework": "vite"
}
